<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>tp1v2</display-name>
  <servlet>
    <servlet-name>CreationClient</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.CreationClient</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreationCommande</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.CreationCommande</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreationCommandeAncien</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.CreationCommandeAncien</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListerClients</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.ListerClients</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListerCommandes</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.ListerCommandes</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChoixTypeClient</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.ChoixTypeClient</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SuppressionClient</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.SuppressionClient</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SuppressionCommande</servlet-name>
    <servlet-class>com.sdzee.tp.servlets.SuppressionCommande</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>Upload</servlet-name>
	<servlet-class>com.sdzee.tp.servlets.Upload</servlet-class>
	<init-param>
		<param-name>chemin</param-name> 
		<param-value>/fichiers/</param-value> 
	</init-param>
	<multipart-config>
		<location>c:/fichiers</location>
		<max-file-size>10485760</max-file-size> <!-- 10 Mo -->
		<max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
		<file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
	</multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreationClient</servlet-name>
    <url-pattern>/creationClient</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreationClient</servlet-name>
    <url-pattern>/afficherClient</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreationCommande</servlet-name>
    <url-pattern>/creationCommande</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreationCommandeAncien</servlet-name>
    <url-pattern>/creationCommandeAncien</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListerClients</servlet-name>
    <url-pattern>/listerClients</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListerCommandes</servlet-name>
    <url-pattern>/listerCommandes</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChoixTypeClient</servlet-name>
    <url-pattern>/choixTypeClient</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SuppressionClient</servlet-name>
    <url-pattern>/suppressionClient</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SuppressionCommande</servlet-name>
    <url-pattern>/suppressionCommande</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
		<servlet-name>Upload</servlet-name>
		<url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
</web-app>